---
type HeaderProps = {
  title: string
  teaser: string
  image: string
}
const {title, teaser, image} = Astro.props as HeaderProps
---
<header class="masthead" style=`background-image: url('/assets/images/${ image }')`>
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="site-heading">
          <h1>{title}</h1>
          <span class="subheading">{teaser}</span>
        </div>
      </div>
    </div>
  </div>
</header>
